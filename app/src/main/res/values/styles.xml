<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mediumGrey</item>
        <item name="colorPrimaryDark">@color/darkGrey</item>
        <item name="colorAccent">@color/blue</item>

        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/bg_window</item>

        <item name="android:textViewStyle">@style/Text.Body1</item>
        <item name="editTextStyle">@style/EditText</item>

        <item name="dialogTheme">@style/DialogFragment</item>
    </style>

    <style name="DialogFragment" parent="AppTheme">
        <item name="android:windowBackground">@color/semiTransparent</item>
    </style>

    <style name="InvisibleTheme" parent="@android:style/Theme.NoDisplay"/>

    <!-- Toolbar style -->
    <style name="Toolbar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:background">@color/darkGrey</item>
    </style>

    <!-- Text styles -->
    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/lightGrey</item>
    </style>

    <style name="Text.Body1">
        <item name="android:textSize">@dimen/textSize_16</item>
    </style>

    <style name="Text.Body1.Error">
        <item name="android:textColor">@color/errorRed</item>
    </style>

    <style name="Text.Body1.Dark">
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="Text.Body1.Colored">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Text.Body1.Pressable">
        <item name="android:textColor">@color/txt_pressable</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Text.Body2">
        <item name="android:fontFamily">@font/lato_light</item>
        <item name="fontFamily">@font/lato_light</item>
        <item name="android:textSize">@dimen/textSize_12</item>
    </style>

    <style name="Text.Body2.Error">
        <item name="android:textColor">@color/errorRed</item>
    </style>

    <style name="Text.Body2.Colored">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Text.Header1">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/textSize_32</item>
    </style>

    <style name="Text.Header2">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/textSize_20</item>
    </style>

    <style name="Text.Header2.Dark">
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <!-- Button styles -->
    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_12</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/btn_primary</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:textColor">@color/btn_secondary</item>
    </style>

    <!-- EditText styles -->
    <style name="EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:padding">@dimen/padding_12</item>
        <item name="android:drawablePadding">@dimen/padding_8</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textColorHint">@color/lightGrey</item>
    </style>

    <!-- Divider styles -->
    <style name="Divider">
        <item name="android:background">@color/mediumGrey</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/strokeWidth</item>
    </style>

    <style name="Divider.Horizontal.Colored">
        <item name="android:background">@color/blue</item>
    </style>

    <!-- Other styles -->
    <style name="CircleIndicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clipChildren">false</item>
        <item name="ci_height">9dp</item>
        <item name="ci_width">9dp</item>
        <item name="ci_drawable">@drawable/bg_pager_indicator_selected</item>
        <item name="ci_drawable_unselected">@drawable/bg_pager_indicator_unselected</item>
    </style>

</resources>
